{
    "name": "mc17/phpdb",
    "description": "Simple PHP library for easy to use PDO-Mysql-Connection query creation and result handling",
    "authors": [
        {
            "name": "mc17",
            "email": "marco.combosch@uni-ulm.de"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-pdo": "*",
        "myclabs/php-enum": "^1.7"
    },
    "autoload": {
